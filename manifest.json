{
  "manifest_version": 3,
  "name": "UMP LMS skipper",
  "version": "3.3.9",
  "description": "Automates the Next button in Articulate players on lms.ump.edu.pl",
  "permissions": ["scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://lms.ump.edu.pl/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://lms.ump.edu.pl/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
